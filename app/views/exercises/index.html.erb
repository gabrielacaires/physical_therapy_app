<h1>Sets of Exercises</h1>

<p><%= link_to 'Create new Exercise', new_exercise_path, { class: "btn btn-info", role: "button" } %></p>

<div class="row">
  <div class="col-md-6">
    <table class="table table-bordered">
      <thead>
        <th></th>
        <th>Name</th>
        <th># Sets</th>
        <th># Repetitions</th>
        <% if current_user.admin %>
          <th></th>
        <% end %>
      </thead>
      <tbody>
        <% @exercises.each do |e| %>
          <tr>
            <td><%= image_tag Typesofexercise.find_by_id(e.typesofexercise_id).photo.url(:thumb) %></td>
            <td><%= link_to Typesofexercise.find_by_id(e.typesofexercise_id).name, exercise_path(e) %></td>
            <td><%= e.n_of_sets %> </td>
            <td><%= e.n_of_repetitions %></td>
            <% if current_user.admin %>
              <td>
                <%= link_to 'edit', edit_exercise_path(e) %>
                <%= link_to 'delete', exercise_path(e), method: :delete, data: {confirm: "Are you sure you want to delete this exercise?"} %>
              </td>
            <% end %>
          </tr>

        <% end %>
      </tbody>
    </table>
  </div>
</div>