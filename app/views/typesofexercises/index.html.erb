<h1>Exercises</h1>

<%= link_to 'Create new exercise', new_typesofexercise_path %>

<table>
  <thead>
    <th>Name</th>
    <th></th>
  </thead>
  <tbody>
    <% @typesofexercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td>
          <%= link_to 'edit', edit_typesofexercise_path(exercise) %>
          <%= link_to 'delete', typesofexercise_path(exercise), method: :delete, data: {confirm: "Are you sure you want to delete this exercise?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>