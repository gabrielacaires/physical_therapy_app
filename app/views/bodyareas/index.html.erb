<h1>Body Areas</h1>

<table>
  <thead>
    <th>Name</th>
    <th></th>
  </thead>  
  <tbody>
    <% @bodyareas.each do |b| %>
      <tr>
        <td><%= b.name %></td>
        <td><%= link_to 'edit', edit_bodyarea_path(b) %></td>
        <td><%= link_to 'delete', bodyarea_path(b), method: :delete, data: {confirm: "Are you sure you want to delete this Body Area?"} %></td>  
      </tr>  
    <% end %> 
  </tbody>
</table> 