<h1>Appointments</h1>

<%= link_to 'Create a new appointment', new_appointment_path %>

<table>
  <thead>
    <th>Date</th>
    <th>Exercises</th>
    <th># Set</th>
    <th># Repetitions</th>
    <th></th>
  </thead>
  <tbody>
    
     <% @appointments.each do |a| %>
      <tr>
        <td><%= link_to 'Appointment', appointment_path(a) %></td>
        <% a.exercises.each do |exercise| %>
          <% e = exercise.typesofexercise_id %>
          <% typeofexercise = Typesofexercise.find_by_id(e) %>
          <td><%= link_to typeofexercise.name, exercise_path(exercise) %></td>
          <td><%= exercise.n_of_sets %></td>
          <td><%= exercise.n_of_repetitions %></td>
          <td>
            <%= link_to 'edit', appointment_path(a) %>
          </td>
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>