<fieldset>
  <div class="form-group">
    <p>Select the body area:</p>
    <%= f.label :bodyarea_id %>
    <%= f.collection_select(:bodyarea_id, Bodyarea.all, :id, :name, { include_blank: true }, { class: "bodyarea_select"}) %>
  </div>

  <div  class="form-group">
    <%= f.label :typesofexercise_id %>
    <%= f.grouped_collection_select(:typesofexercise_id, Bodyarea.all, :typesofexercises, :name,  :id, :name, { include_blank: true }) %>  
  </div>

  <div class="form-group">
    <%= f.label :sets %>
    <%= f.text_field :n_of_sets, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :repetitions %>
    <%= f.text_field :n_of_repetitions, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :duration_of_repetitions %>
    <%= f.text_field :duration_of_repetition, class: "form-control" %>
  </div>
</fieldset>