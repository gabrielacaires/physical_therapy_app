<%= form_for(@appointment, { remote: true } ) do |f| %>

  <div class="form-group">
    <%= f.datetime_select :app_date %>
  </div>

  <div class="form-group">
    <%= f.label :duration %>
    <%= f.text_field :duration %>
  </div>

  <div class="form-group">
    <%= f.label :comments %>
    <%= f.text_area :comments %>
  </div>

  <%= f.fields_for :exercises do |ff| %>
    <%= render "exercise_fields", f: ff %>
  <% end %>

  <%= link_to_add_fields 'Add exercise', f, :exercises %>



  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('#select_bodyareas input').on('change', function () {
      var selected = [];
      $('input:checked').each(function() {
          selected.push($(this).attr('value'));
      });

      $('.bodyarea').hide();

      for (i = 0; i < selected.length; i++) { 
        
        $('#bodyarea_'+ selected[i]).fadeIn(500);
      }
    });
  });
</script>